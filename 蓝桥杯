#include<iostream>
using namespace std;
int main() {
	bool flag = true;
	int a = 0;
	int b[30][30];
	cin >> a;
	int sum = 0;
	b[0][0] = 1;
	b[1][1] = 1;
	b[1][2] = 1;
	if (0 <= a && a <= 10) {
		for (int i = 2; flag==true; i++) {
			for (int j =1; j <= i+1; j++) {
				b[i][j] = b[i - 1][j - 1] + b[i - 1][j];
				if (b[i][j] == a) {
					for (int k = 1; k < i; k++) {
						sum += k;
					}
					sum += j;
					flag = false;
					cout << sum << endl;
				}
				if (flag == false) {
					break;
				}
					}

				}
			}
}
